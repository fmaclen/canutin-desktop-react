{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../../build",
    "rootDir": "../",
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "../",
    "paths": {
      "@app/*": ["app/*"],
      "@appConstants/*": ["app/constants/*"],
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["app/assets/*"],
      "@routes": ["app/routes"],
      "@database/*": ["database/*"]
    }
  }
}
